// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usario {
  id Int @id @default(autoincrement())
  email String @unique
  senha String
  nome String
  despesas Despesas[]
}

model Despesas {
  id Int @id @default(autoincrement())
  descricao String
  data String
  valor Float
  author Usario @relation(fields: [authorId], references: [id])
  authorId Int
}
